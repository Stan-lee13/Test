// /api/products.js
import fetch from 'node-fetch';

export default async function handler(req, res) {
  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Method not allowed' });
  }

  try {
    const { token, email, pageNum = 1, pageSize = 10 } = req.body;

    if (!token || !email) {
      return res.status(400).json({ error: 'Token and email are required' });
    }

    const endpoint = 'https://developers.cjdropshipping.com/api2.0/v1/product/list';

    const body = {
      pageNum,
      pageSize,
      email
    };

    const response = await fetch(endpoint, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'CJ-Access-Token': token
      },
      body: JSON.stringify(body)
    });

    const text = await response.text();

    let json;
    try {
      json = JSON.parse(text);
    } catch (parseErr) {
      return res.status(500).json({ error: 'Invalid JSON from CJ API', raw: text });
    }

    // Check for success
    if (!(response.status === 200 && (json.code === 200 || json.result === true))) {
      return res.status(400).json({ error: 'CJ API returned failure', details: json });
    }

    const products = json.data?.list || json.data || [];

    return res.status(200).json({ products });

  } catch (err) {
    return res.status(500).json({ error: err.message });
  }
}